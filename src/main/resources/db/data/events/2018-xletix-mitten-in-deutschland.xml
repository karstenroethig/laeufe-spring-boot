<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="2018-xletix-mitten-in-deutschland_name" value="XLETIX Challenge - Mitten in Deutschland"/>
	<property name="2018-xletix-mitten-in-deutschland_start_date" value="2018-08-18"/>

	<changeSet id="2018-xletix-mitten-in-deutschland" author="roethig">

		<!-- ============= -->
		<!-- Table "Event" -->
		<!-- ============= -->
		<insert tableName="Event">
			<column name="organizer_id" valueNumeric="select id from Organizer where name='${organizer-xletix}'"/>
			<column name="name" value="${2018-xletix-mitten-in-deutschland_name}"/>
			<column name="start_date" value="${2018-xletix-mitten-in-deutschland_start_date}"/>
			<!--column name="end_date" value=""/-->
			<column name="location_name" value="Offroad Park Mammut, Stadtoldendorf/Niedersachsen"/>
			<column name="location_country_id" valueNumeric="select id from Country where name='${country-germany}'"/>
			<column name="location_latitude" value="51.876209"/>
			<column name="location_longitude" value="9.645745"/>
			<column name="distance" value="12+"/>
			<!--column name="racetime" value=""/-->
			<column name="costs" value="89.00"/>
			<column name="status" value="1"/>
		</insert>

		<!-- ============ -->
		<!-- Table "Race" -->
		<!-- ============ -->
		<insert tableName="Race">
			<column name="event_id" valueNumeric="select id from Event where name='${2018-xletix-mitten-in-deutschland_name}' and start_date='${2018-xletix-mitten-in-deutschland_start_date}'"/>
			<column name="category_id" valueNumeric="select id from Category where name='${category-hindernislauf}'"/>
			<!--column name="start_number" value=""/-->
			<column name="start_time" valueDate="2018-08-18T12:00:00"/>
			<!--column name="distance" value=""/-->
			<!--column name="racetime" value=""/-->
			<!--column name="team" value=""/-->
			<column name="note" value="M-Distanz"/>
			<column name="status" value="1"/>
		</insert>

		<!-- ================== -->
		<!-- Table "Cost_Point" -->
		<!-- ================== -->
		<insert tableName="Cost_Point">
			<column name="event_id" valueNumeric="select id from Event where name='${2018-xletix-mitten-in-deutschland_name}' and start_date='${2018-xletix-mitten-in-deutschland_start_date}'"/>
			<column name="sequence" value="1"/>
			<column name="description" value="TeilnahmegebÃ¼hr"/>
			<column name="amount" value="89.00"/>
			<!--column name="amount_foreign_currency" value="0.00"/-->
			<!--column name="foreign_currency" value=""/-->
		</insert>

	</changeSet>

</databaseChangeLog>
