<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="2014-survival-run_name" value="Survival Run"/>
	<property name="2014-survival-run_start_date" value="2014-09-13"/>

	<changeSet id="2014-survival-run" author="roethig">

		<!-- ============= -->
		<!-- Table "Event" -->
		<!-- ============= -->
		<insert tableName="Event">
			<column name="organizer_id" valueNumeric="select id from Organizer where name='${organizer-survival-run}'"/>
			<column name="name" value="${2014-survival-run_name}"/>
			<column name="start_date" value="${2014-survival-run_start_date}"/>
			<!--column name="end_date" value=""/-->
			<column name="location_name" value="Serengeti Park, Hodenhagen"/>
			<column name="location_country_id" valueNumeric="select id from Country where name='${country-germany}'"/>
			<column name="location_latitude" value="52.754"/>
			<column name="location_longitude" value="9.6205"/>
			<column name="distance" value="2 x 8"/>
			<column name="racetime" value="01:29:59"/>
			<column name="costs" value="68.99"/>
			<column name="status" value="2"/>
		</insert>

		<!-- ============ -->
		<!-- Table "Race" -->
		<!-- ============ -->
		<insert tableName="Race">
			<column name="event_id" valueNumeric="select id from Event where name='${2014-survival-run_name}' and start_date='${2014-survival-run_start_date}'"/>
			<column name="category_id" valueNumeric="select id from Category where name='${category-hindernislauf}'"/>
			<column name="start_number" value="2900"/>
			<column name="start_time" valueDate="2014-09-13T13:00:00"/>
			<column name="distance" value="16.0"/>
			<column name="racetime" value="01:29:59"/>
			<!--column name="team" value=""/-->
			<column name="note" value="Platz 57 von 739 16-km-Läufern (Platz 56 in männlicher Wertung)"/>
			<column name="status" value="2"/>
		</insert>

		<!-- ================== -->
		<!-- Table "Cost_Point" -->
		<!-- ================== -->
		<insert tableName="Cost_Point">
			<column name="event_id" valueNumeric="select id from Event where name='${2014-survival-run_name}' and start_date='${2014-survival-run_start_date}'"/>
			<column name="sequence" value="1"/>
			<column name="description" value="TODO"/>
			<column name="amount" value="0.00"/>
			<!--column name="amount_foreign_currency" value="0.00"/-->
			<!--column name="foreign_currency" value=""/-->
		</insert>

	</changeSet>

</databaseChangeLog>
