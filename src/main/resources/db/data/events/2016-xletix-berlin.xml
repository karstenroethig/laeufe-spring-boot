<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="2016-xletix-berlin_name" value="XLETIX Challenge - Berlin"/>
	<property name="2016-xletix-berlin_start_date" value="2016-05-21"/>

	<changeSet id="2016-xletix-berlin" author="roethig">

		<!-- ============= -->
		<!-- Table "Event" -->
		<!-- ============= -->
		<insert tableName="Event">
			<column name="organizer_id" valueNumeric="select id from Organizer where name='${organizer-xletix}'"/>
			<column name="name" value="${2016-xletix-berlin_name}"/>
			<column name="start_date" value="${2016-xletix-berlin_start_date}"/>
			<column name="end_date" value="2016-05-22"/>
			<column name="location_name" value="Offroad Park Berlin Berandenburg, Kallinchen"/>
			<column name="location_country_id" valueNumeric="select id from Country where name='${country-germany}'"/>
			<column name="location_latitude" value="52.208583"/>
			<column name="location_longitude" value="13.5354137"/>
			<column name="distance" value="18+"/>
			<column name="costs" value="74.00"/>
			<column name="status" value="3"/>
		</insert>

		<!-- ============ -->
		<!-- Table "Race" -->
		<!-- ============ -->
		<insert tableName="Race">
			<column name="event_id" valueNumeric="select id from Event where name='${2016-xletix-berlin_name}' and start_date='${2016-xletix-berlin_start_date}'"/>
			<column name="category_id" valueNumeric="select id from Category where name='${category-hindernislauf}'"/>
			<!--column name="start_number" value=""/-->
			<column name="start_time" valueDate="2016-05-21T10:00:00"/>
			<!--column name="distance" value=""/-->
			<!--column name="racetime" value=""/-->
			<!--column name="team" value=""/-->
			<column name="note" value="Nicht gestartet wegen Verletzung"/>
			<column name="status" value="3"/>
		</insert>

		<!-- ================== -->
		<!-- Table "Cost_Point" -->
		<!-- ================== -->
		<insert tableName="Cost_Point">
			<column name="event_id" valueNumeric="select id from Event where name='${2016-xletix-berlin_name}' and start_date='${2016-xletix-berlin_start_date}'"/>
			<column name="sequence" value="1"/>
			<column name="description" value="TeilnahmegebÃ¼hr"/>
			<column name="amount" value="69.00"/>
			<!--column name="amount_foreign_currency" value="0.00"/-->
			<!--column name="foreign_currency" value=""/-->
		</insert>
		<insert tableName="Cost_Point">
			<column name="event_id" valueNumeric="select id from Event where name='${2016-xletix-berlin_name}' and start_date='${2016-xletix-berlin_start_date}'"/>
			<column name="sequence" value="2"/>
			<column name="description" value="Parkplatz"/>
			<column name="amount" value="5.00"/>
			<!--column name="amount_foreign_currency" value="0.00"/-->
			<!--column name="foreign_currency" value=""/-->
		</insert>

	</changeSet>

</databaseChangeLog>
