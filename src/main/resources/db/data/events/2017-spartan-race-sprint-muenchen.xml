<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="2017-spartan-race-sprint-muenchen_name" value="Spartan Race - München (Sprint)"/>
	<property name="2017-spartan-race-sprint-muenchen_start_date" value="2017-04-08"/>

	<changeSet id="2017-spartan-race-sprint-muenchen" author="roethig">

		<!-- ============= -->
		<!-- Table "Event" -->
		<!-- ============= -->
		<insert tableName="Event">
			<column name="organizer_id" valueNumeric="select id from Organizer where name='${organizer-spartan-race}'"/>
			<column name="name" value="${2017-spartan-race-sprint-muenchen_name}"/>
			<column name="start_date" value="${2017-spartan-race-sprint-muenchen_start_date}"/>
			<!--column name="end_date" value=""/-->
			<column name="location_name" value="Olympiapark, München"/>
			<column name="location_country_id" valueNumeric="select id from Country where name='${country-germany}'"/>
			<column name="location_latitude" value="48.1729"/>
			<column name="location_longitude" value="11.5438"/>
			<column name="distance" value="5+"/>
			<column name="racetime" value="01:21:15"/>
			<column name="costs" value="71.19"/>
			<column name="status" value="2"/>
		</insert>

		<!-- ============ -->
		<!-- Table "Race" -->
		<!-- ============ -->
		<insert tableName="Race">
			<column name="event_id" valueNumeric="select id from Event where name='${2017-spartan-race-sprint-muenchen_name}' and start_date='${2017-spartan-race-sprint-muenchen_start_date}'"/>
			<column name="category_id" valueNumeric="select id from Category where name='${category-hindernislauf}'"/>
			<column name="start_number" value="44019"/>
			<column name="start_time" valueDate="2017-04-08T10:00:00"/>
			<column name="distance" value="8.0"/>
			<column name="racetime" value="01:21:15"/>
			<!--column name="team" value=""/-->
			<column name="note" value="2 x 30 Burpees Strafe für nicht geschaffte Hindernisse (Speerwurf, Kletterwand mit Ketten und Löcher)"/>
			<column name="status" value="2"/>
		</insert>

		<!-- ================== -->
		<!-- Table "Cost_Point" -->
		<!-- ================== -->
		<insert tableName="Cost_Point">
			<column name="event_id" valueNumeric="select id from Event where name='${2017-spartan-race-sprint-muenchen_name}' and start_date='${2017-spartan-race-sprint-muenchen_start_date}'"/>
			<column name="sequence" value="1"/>
			<column name="description" value="TODO"/>
			<column name="amount" value="0.00"/>
			<!--column name="amount_foreign_currency" value="0.00"/-->
			<!--column name="foreign_currency" value=""/-->
		</insert>

	</changeSet>

</databaseChangeLog>
